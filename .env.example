# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Production Frontend URL (when deployed with Docker)
# FRONTEND_URL=http://localhost

# Initial Nextcloud Admin Account (REQUIRED for first setup only)
# These credentials are ONLY used to create the Nextcloud admin account during first container start.
# After setup: ALL user management happens exclusively in Nextcloud.
# Users login with their Nextcloud credentials - no separate Dashboard passwords exist.
NEXTCLOUD_INITIAL_ADMIN_USER=admin
NEXTCLOUD_INITIAL_ADMIN_PASSWORD=your_secure_password

# Session Secret (REQUIRED in production)
SESSION_SECRET=generate_a_random_secret_here_min_32_chars

# Nextcloud Configuration
# When using docker-compose, Nextcloud is automatically configured with your dashboard credentials
# NEXTCLOUD_URL is set automatically to http://nextcloud (internal Docker network)
# For external Nextcloud server:
# NEXTCLOUD_URL=https://cloud.example.com
# NEXTCLOUD_USERNAME=your_nextcloud_username
# NEXTCLOUD_PASSWORD=your_nextcloud_password_or_app_token

# Nextcloud Database Passwords (for docker-compose setup)
# Change these for production!
NEXTCLOUD_DB_PASSWORD=nextcloud_secure_password
NEXTCLOUD_DB_ROOT_PASSWORD=secure_root_password

# AI API Keys (System-wide defaults - users can provide their own in settings)
ANTHROPIC_API_KEY=your_claude_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Encryption Key for User API Keys (REQUIRED - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# This 256-bit key is used to encrypt user API keys in the database (AES-256-GCM)
ENCRYPTION_KEY=38165c882c6eca3ed81ba1394d84111bef2dbfd26eebeb4db65d0a7e3b47bc6d

# Google Drive API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# Cloud Storage (WebDAV for private cloud - generic)
WEBDAV_URL=your_webdav_server_url
WEBDAV_USERNAME=your_username
WEBDAV_PASSWORD=your_password

# Database (optional, for saving articles/data)
# DATABASE_URL=postgresql://user:password@localhost:5432/journalism_dashboard
