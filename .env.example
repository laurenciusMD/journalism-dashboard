# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Production Frontend URL (when deployed with Docker)
# FRONTEND_URL=http://localhost

# Authentication (REQUIRED)
# These credentials are used to login to the dashboard
# They can also be your Nextcloud credentials for SSO
DASHBOARD_USERNAME=your_username
DASHBOARD_PASSWORD=your_secure_password

# Session Secret (REQUIRED in production)
SESSION_SECRET=generate_a_random_secret_here_min_32_chars

# Nextcloud Configuration (Optional - for SSO and file access)
# If configured, you can login with your Nextcloud credentials
NEXTCLOUD_URL=https://cloud.example.com
NEXTCLOUD_USERNAME=your_nextcloud_username
NEXTCLOUD_PASSWORD=your_nextcloud_password_or_app_token

# AI API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Google Drive API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# Cloud Storage (WebDAV for private cloud - generic)
WEBDAV_URL=your_webdav_server_url
WEBDAV_USERNAME=your_username
WEBDAV_PASSWORD=your_password

# Database (optional, for saving articles/data)
# DATABASE_URL=postgresql://user:password@localhost:5432/journalism_dashboard
