# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Production Frontend URL (when deployed with Docker)
# FRONTEND_URL=http://localhost

# AI API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Google Drive API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# Cloud Storage (WebDAV for private cloud)
WEBDAV_URL=your_webdav_server_url
WEBDAV_USERNAME=your_username
WEBDAV_PASSWORD=your_password

# Session Secret
SESSION_SECRET=generate_a_random_secret_here

# Database (optional, for saving articles/data)
# DATABASE_URL=postgresql://user:password@localhost:5432/journalism_dashboard
